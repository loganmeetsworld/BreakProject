<h1>Activities</h1>
<section>
  <h3>Filters</h3>
  <%= form_tag '', :method => :get do %>
    <%= select_tag "Category", options_for_select(@categories), prompt: "Select a category" %>
    <%= submit_tag 'Filter by Category' %>
    <% end %>
    <%= form_tag '', :method => :get do %>
    <%= select_tag "Subcategory", options_for_select(@subcategories), prompt: "Select a subcategory" %>
    <%= submit_tag 'Filter by Subcategory' %>
    <% end %>
    <%= form_tag '', :method => :get do %>
    <%= collection_select :neighborhood, :neighborhood_id, Neighborhood.all, :id, :name, prompt: "Select a neighborhood" %>
    <%= submit_tag 'Filter by Neighborhood' %>
    <% end %>
    <%= form_tag '', :method => :get do %>
    <%= select_tag "Price", options_for_select(["Free", "$1 - $5", "$5 - $10", "$10 - $15", "$15 - $20", "$20+"]), prompt: "Select a price range" %>
    <%= submit_tag 'Filter by Price Range' %>
    <% end %>
    <%= form_tag '', :method => :get do %>
    <table>
      <tr>
        <td>
          <strong>Monday:</strong>
        </td>
        <td>
          <%= radio_button_tag "Time", :monday_morning %>Mornings
        </td>
        <td>
          <%= radio_button_tag "Time", :monday_afternoon %>Afternoons
        </td>
        <td>
          <%= radio_button_tag "Time", :monday_evening %>Evenings
        </td>
      </tr>
      <tr>
        <td>
