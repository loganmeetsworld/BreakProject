<%= link_to "Click Here", neighborhood_path(@neighborhood.id) %> to return to <%= @neighborhood.name %>.
<br>
<br>
<%= form_for [@neighborhood, @activity] do |f| %>
  <fieldset>
    <legend>Activity Details</legend>
    <%= f.label :name, 'Name: ' %>
    <%= f.text_field :name, :required => true %>
    <br>
    <br>
    <%= f.label :category, 'Category: ' %>
    <%= f.select :category, @categories, prompt: "Select a category" %>
    <%= f.label :subcategory, 'Subcategory: ' %>
    <%= f.select :subcategory, @subcategories, prompt: "Select a subcategory" %>
    <br>
    <br>
    <%= f.label :description, 'Description: ' %>
    <br>
    <%= f.text_area :description %>
    <br>
    <br>
    When:
    <br>
    <strong>Monday:</strong>
    <%= f.check_box :monday_morning %>
    <%= f.label :monday_morning, "Mornings " %>
    <%= f.check_box :monday_afternoon %>
    <%= f.label :monday_afternoon, "Afternoons " %>
    <%= f.check_box :monday_evening %>
    <%= f.label :monday_evening, "Evenings " %>
    <br>
    <strong>Tuesday:</strong>
    <%= f.check_box :tuesday_morning %>
    <%= f.label :tuesday_morning, "Mornings " %>
    <%= f.check_box :tuesday_afternoon %>
    <%= f.label :tuesday_afternoon, "Afternoons " %>
    <%= f.check_box :tuesday_evening %>
    <%= f.label :tuesday_evening, "Evenings " %>
    <br>
    <strong>Wednesday:</strong>
    <%= f.check_box :wednesday_morning %>
    <%= f.label :wednesday_morning, "Mornings " %>
    <%= f.check_box :wednesday_afternoon %>
    <%= f.label :wednesday_afternoon, "Afternoons " %>
    <%= f.check_box :wednesday_evening %>
    <%= f.label :wednesday_evening, "Evenings " %>
    <br>
    <strong>Thursday:</strong>
    <%= f.check_box :thursday_morning %>
    <%= f.label :thursday_morning, "Mornings " %>
    <%= f.check_box :thursday_afternoon %>
    <%= f.label :thursday_afternoon, "Afternoons " %>
    <%= f.check_box :thursday_evening %>
    <%= f.label :thursday_evening, "Evenings " %>
    <br>
    <strong>Friday:</strong>
    <%= f.check_box :friday_morning %>
    <%= f.label :friday_morning, "Mornings " %>
    <%= f.check_box :friday_afternoon %>
    <%= f.label :friday_afternoon, "Afternoons " %>
    <%= f.check_box :friday_evening %>
    <%= f.label :friday_evening, "Evenings " %>
    <br>
    <strong>Saturday:</strong>
    <%= f.check_box :saturday_morning %>
    <%= f.label :saturday_morning, "Mornings " %>
    <%= f.check_box :saturday_afternoon %>
    <%= f.label :saturday_afternoon, "Afternoons " %>
    <%= f.check_box :saturday_evening %>
    <%= f.label :saturday_evening, "Evenings " %>
    <br>
    <strong>Sunday:</strong>
    <%= f.check_box :sunday_morning %>
    <%= f.label :sunday_morning, "Mornings " %>
    <%= f.check_box :sunday_afternoon %>
    <%= f.label :sunday_afternoon, "Afternoons " %>
    <%= f.check_box :sunday_evening %>
    <%= f.label :sunday_evening, "Evenings " %>
    <br>
    <br>
    <%= f.label :website, 'Website: ' %>
    <%= f.text_field :website %>
    <br>
    <%= f.label :price_range, 'Price Range: ' %>
    <%= f.select :price_range, ["Free", "$1 - $5", "$5 - $10", "$10 - $15", "$15 - $20", "$20+"], prompt: "Select a price range" %>
    <br>
    <%= f.label :minutes_from_ada, 'Transit Time (from Ada): ' %>
    <%= f.number_field :minutes_from_ada %>
    minutes by
    <%= f.select :method, @method, prompt: "Select a transit method" %>
    <br>
    <%= f.label :address, 'Address: ' %>
    <%= f.text_field :address %>
    <%= f.label :city, 'City: ' %>
    <%= f.text_field :city, :value => "Seattle" %>
    <%= f.label :state, 'State: ' %>
    <%= f.select :state, us_states, :selected => 'WA' %>
    <%= f.label :zip, 'Zip Code: ' %>
    <%= f.text_field :zip %>
    <br>
    <br>
    <%= f.submit %>
  </fieldset>
<% end %>
