<%= form_for @neighborhood do |f| %>
  <fieldset>
    <legend>Neighborhood Details</legend>
    <%= f.label :name, 'Name: ' %>
    <%= f.text_field :name, :required => true %>
    <br>
    <br>
    <%= f.label :description, 'Description: ' %>
    <br>
    <%= f.text_area :description %>
    <br>
    <br>
    <%= f.submit %>
  </fieldset>
<% end %>
